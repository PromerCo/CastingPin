<view class="project">

  <view class="information" >
    <view class="Consignee">
      <view class="Consignee_left">
        <image src="../../image/cute.jpg"></image>
      </view>
      <view class="Consignee_right">

        <view class=" com phone ">
          <p>电话:</p>
          <view wx:if='{{message.phone}}' class="phonenumber com phone">
            <input placeholder="\*" placeholder-class="phcolor" bindblur="validate" maxlength="11" class="input-text" value='{{message.phone}}' name="phone"></input>
          </view>
          <view wx:else class="phonenumber">
            <view wx:if="{{phoneNumber}}">
              <input placeholder="\*" placeholder-class="phcolor" bindblur="validate" maxlength="11" class="input-text" value='{{phoneNumber}}' name="phone"></input>
            </view>
            <view wx:else>
              <button class='phone_button' open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">一键绑定</button>
            </view>

          </view>
        </view>
        <view class=" com wx ">
          <p>微信:</p>
          <input   bindinput="bingd_wx"  placeholder="\*" placeholder-class="phcolor" type=" text" class="input-text" name="wx_name" value='{{message.wechat}}'></input>
        </view>

        <view class="com email">
          <p>邮箱:</p>
          <input   bindinput="bingd_emali"  placeholder="必填" placeholder-class="phcolor" type=" text" class="input-text" name="email" value='{{message.email}}'></input>
        </view>

      </view>
    </view>
  </view>
  <view class="news">
    <view class="basic company">
      <p>
        <image src="../../image/yanyuan.png" class="icon"></image>
        公 司:
      </p>
      <view class="rig">
        <input  bindinput="bingd_corporation"   placeholder="\*" placeholder-class="phcolor" type=" text" class="input-xin" name="company" value='{{message.corporation}}'></input>
    
      </view>
    </view>

    <view class="basic city">
      <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
        <view class="picker">
          <p>
            <image src="../../image/yanyuan.png" class="icon"></image>
            城 市
          </p>
          <view class="rig">
            <view class="city_y">{{region[0]}}，{{region[1]}}，{{region[2]}}</view>
            <image src="../../image/xiaojiantou2.png" class="jiantou"></image>
          </view>
        </view>
      </picker>
    </view>
    

    
    <view class="basic age" bindtap="showPicker_05">


  <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
        <view class="picker">
          <p>
            <image src="../../image/yanyuan.png" class="icon"></image>
            日 期
          </p>
          <view class="rig">
            <view class="height_y"> {{date}}</view>
            <image src="../../image/xiaojiantou2.png" class="jiantou"></image>
          </view>
          <input hidden value='{{multiArray2[0][multiIndex2[0]]}}{{multiArray2[1][multiIndex2[1]]}}' name="birthday"></input>
 
        </view>
  </picker>

    </view>


    <view class="basic profession">
      <picker bindchange="bindPickerChange" value="{{occupation_list[index].name}}" range="{{occupation_list}}"  range-key="name">
        <view class="picker">
          <p>
            <image src="../../image/yanyuan.png" class="icon"></image>
            职 业
          </p>
          <view class="rig">
            <view class="height_y"> {{occupation_list[index].name}}</view>
      
            <image src="../../image/xiaojiantou2.png" class="jiantou"></image>
          </view>
        </view>
      </picker>
    </view>


  <view class="contivide">

     <view class="page__bd page__bd_spacing">
     <view class="sub-title">
       身高({{actor_height}})
      </view>

        <wux-slider min="150" max="200"  controlled   bind:afterChange="afterChangeHeight"  bind:change="onChangeHeight"  defaultValue="{{ [ actor_height ] }}"  value="{{ [actor_height] }}" showValue />
    </view>


     <view class="page__bd page__bd_spacing">

        <view class="sub-title">
           体重({{actor_weight}})
