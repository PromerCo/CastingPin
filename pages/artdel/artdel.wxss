/* 底部 */

.footer {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 28rpx;
  background: rgb(241, 241, 243);
  position: fixed;
  display: flex;
  justify-content: space-between;
  left: 0rpx;
  bottom: 0rpx;
}
.photo{
  width: 95%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
  border-bottom: 1rpx solid rgb(235,235,235)

}
.footer view {
  display: flex;
  justify-content: space-between;
}

.footer span {
  margin-left: 10rpx;
}

.footer view:nth-of-type(1) {
  margin-left: 60rpx;
}

.footer view:nth-of-type(3) {
  margin-right: 60rpx;
}

.footer image {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  margin-top: 32rpx;
}


.apply_kol_header {
  margin-top: 20rpx;
}

.apply_kol_header p {
  color: block;
  font-size: 24rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.apply_kol_header p:last-child {
  float: right;
  margin-right: 20rpx;
  color: gray;
}
.icon_wrap {
  width: 95%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx auto;
  padding-top: 20rpx;
  min-height: 150px;
  border-top: 1rpx solid rgb(243, 239, 239);
}
.icon {
  width: 50rpx;
  height: 50rpx;
  padding-left: 5rpx;
}
.image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.footer button{
  height: 120rpx !important;
  margin-left: 0rpx !important;
  background: rgb(241, 241, 243) !important;
  color: black !important;
   display: flex;
  justify-content: space-between;
}
.footer button span{
  font-size: 28rpx;
  margin-top: 25rpx;
}
.footer button::after{
   border: none
}

.footer view:nth-of-type(2){
  margin-left:-60rpx;
}