.wrap {
  width: 100%;
  height:1900rpx;
}

/* 封面图 */

.cover {
  width: 95%;
  height: 300rpx;
  margin: 0rpx auto;
  position: relative;
}

.picture {
  width: 100%;
  height: auto;
}

.picture image {
  width: 100%;
  height: 300rpx;
}

.pic_name {
  font-size: 24rpx;
  position: absolute;
  left: 87rpx;
  top: 12rpx;
}

.pic_author {
  font-size: 20rpx;
  position: absolute;
  left: 150rpx;
  top: 15rpx;
}

.me {
  position: absolute;
  left: 20rpx;
  top: 0;
  width: 50rpx;
  height: 50rpx;
}

.new {
  width: 100%;
  height: 80rpx;
  color: #fff;
  position: absolute;
  left: 0;
  bottom: 0rpx;
  display: flex;
  line-height: 80rpx;
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.3);
}

.speciality {
  margin-left: 230rpx;
}

.speciality span {
  margin-left: 10rpx;
}

.circles {
  margin-left: 20rpx;
}

.width {
  margin-left: 15rpx;
}

/* 音频 */

.audio {
  margin-top: 20rpx;
}

.intro {
  margin: 30px;
  text-align: center;
}

audio {
  display: flex;
  flex-direction: column;
}

/* 视频 */

.video {
  margin-top: 10rpx;
}

video {
  width: 95%;
  margin: 10rpx 0rpx 10rpx 20rpx;
}

/* 写真 */

swiper {
  width: 95%;
  height:1000rpx;
  margin: 10rpx 0rpx 10rpx 20rpx;
}

swiper image {
  width: 100%;
  height: 100%;
}
/* 底部 */

.footer {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 28rpx;
  background: rgb(241, 241, 243);
  position: fixed;
  display: flex;
  justify-content: space-between;
  left: 0rpx;
  bottom: 0rpx;
}
.photo{
  width: 95%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
  border-bottom: 1rpx solid rgb(235,235,235)

}
.footer view {
  display: flex;
  justify-content: space-between;
}

.footer span {
  margin-left: 10rpx;
}

.footer view:nth-of-type(1) {
  margin-left: 60rpx;
}

.footer view:nth-of-type(3) {
  margin-right: 60rpx;
}

.footer image {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  margin-top: 32rpx;
}
