<view class="wrap" hidden="{{!loadingHidden}}">
  <!-- 封面图 -->
  <view class="cover" >
    <view class="picture" bindtap="previewImage">
      <image src="{{list.cover_img}}" mode="aspectFill" data-src="{{list.cover_img}}"></image>
    </view>
    <view class="picture_image">
      <view>
        <image src="../../image/tabbar/me.png" class="me"></image>
        <p class="pic_name">{{list.stage_name}}</p>
        <p class="pic_author">{{list.occupation}}</p>
      </view>
      <view class="new">
        <p class="width">{{list.height}}cm</p>
        <p class="circles">{{list.woman}}</p>
        <view class="speciality">
          <p>特长：</p>

          <span>{{list.speciality}} </span>
        </view>
      </view>
    </view>
  </view>
  <!-- 音频 -->
