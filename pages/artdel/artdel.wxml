    <audio src="{{current.src}}" poster="{{current.poster}}" name="{{current.name}}" author="{{current.author}}" action="{{audioAction}}" bindplay="audioPlayed" bindtimeupdate="audioTimeUpdated" controls></audio>
  </view> -->
  <!-- 视频 -->
  <view class="video">
    <video id="myVideo" src="{{list.cover_video}}"
      binderror="videoErrorCallback" controls></video>
  </view>
  <!-- 写真 -->
  <view>
  <view class="photo">写真</view>
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" circular="{{circular}}" vertical="{{vertical}}" interval="{{interval}}" duration="{{duration}}" previous-margin="{{previousMargin}}px" next-margin="{{nextMargin}}px">
      <block>
        <swiper-item>
          <image src="{{list.cover_img}}"></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- 剧照 -->
