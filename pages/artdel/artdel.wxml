  <!-- 底部 -->

      <view class='apply_kol'>
      <view class='apply_kol_header'>
        <p>已邀请KOL</p>
        <p>
          <span>{{follow_number}} 关注 / {{invite_number}} 邀请</span>
        </p>
      </view>
      <view class="icon_wrap">
        <view class="icon" wx:for='{{invite}}' wx:for-index='index' wx:for-item="item">
          <image src="{{item.avatar_url}}" class="image"></image>
        </view>
      </view>
    </view>

  <view class="footer">
    <!-- <view>
      <image src="../../image/share.png"></image>
      <span>分享</span>
    </view> -->

   
      <view>
        <button class='share' id="shareBtn" open-type="share" type="primary" hover-class="other-button-hover">
            <image src='../../image/share.png'></image>
            <span class="share-title">分享</span>
          </button>

       </view>

    <view bindtap="bindFollow" data-status="{{status}}" data-id="{{list.id}}">
      <image src="../../image/collection.png"></image>
      <span>{{follow}}</span>
    </view>
    <view catchtap='invite' data-id="{{list.id}}">
      <image src="../../image/email.png"></image>
      <span>邀请</span>
    </view>
  </view>
</view>

