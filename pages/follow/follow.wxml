<view class="wrap"  hidden="{{!loadingHidden}}">

<view wx:if="{{status == 0}}">

  <view class="swiper-tab">
    <view class="tab-item {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">关注</view>
    <view class="tab-item {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">粉丝</view>
  </view>
    <view  wx:if="{{currentTab == 0}}" >
<view wx:for="{{list}}"  catchtap="nvadatil" data-id="{{item.pro_id}}">

      <wux-swipe-action-group>
  <wux-swipe-action autoClose right="{{ right }}" data-id="{{item.pro_id}}" bind:click="onclick">
        <view class="content demo-item">
          <view class="content_left">
            <image src="{{item.avatar_url}}"></image>
          </view>
          <view class="content_right">
            <view class="name">{{item.stage_name}}</view>
            <view class="occupation">{{item.occupation}}</view>
          </view>
       </view>
      </wux-swipe-action>
       </wux-swipe-action-group>
</view>
    </view>
    <view  wx:else>
    <view wx:for="{{list}}" >
      <view right="{{ right }}" bind:click="onclick">
        <view class="content demo-item">
          <view class="content_left">
            <image src="{{item.avatar_url}}"></image>
          </view>
          <view class="content_right">
             <view class="name">{{item.nick_name}}</view>
            <view class="occupation">{{item.position}}</view>
          </view>
       </view>
      </view>
</view>
    </view>
    </view>

   <view wx:else>

           <view class="enshrine"  wx:for="{{list}}">
                <view>
                {{item.title}}</view>
                <view>{{item.occupation}}</view>
           </view>

   </view>  

</view>

<loading hidden="{{loadingHidden}}">
    加载中...
</loading>