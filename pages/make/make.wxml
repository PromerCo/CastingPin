

<view  class="page"  wx:if="{{loadingHidden==0}}">
  <!--顶部导航栏-->
  <view class="swiper-tab">
    <view class="tab-item {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">侧边式</view>
    <view class="tab-item {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">插入式</view>
    <view class="tab-item {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">底部式</view>
  </view>
  <!--内容主体-->

  <view id="footer" bindtap="uploadImg">
       一键生成
</view>

<view>

</view>

  <swiper class="swiper" current="{{currentTab}}" duration="200" bindchange="swiperChange">
    <swiper-item>
      <view class="wrap">
        <view class="content">
          <view id="picture">
            <wux-upload listType="picture-card" defaultFileList="{{ fileList }}" max="5"  count="5" url="https://www.skyvow.cn/api/common/file" bind:change="onChange" bind:success="onSuccess" bind:fail="onFail" bind:complete="onComplete" bind:preview="onPreview">
            </wux-upload>
          </view>
        </view>
      </view>
    </swiper-item>
    <swiper-item>



    </swiper-item>


  </swiper>
</view>
<view wx:else>

<view class="he_img">
 <image  mode='widthFix'  src="{{file_img}}"></image>
</view>

</view>
