/* 视频 */
.container {
  background: #F0F1F5;
}
.construtor {
  height: 100%;
  margin-left: 40rpx !important;
  margin-top: 20rpx;
}
.video-card {
  background: #FFFFFF;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  width: 95%;
}
.video-box {
  position: relative;
  width: 100%;
  height: 424rpx;
}
.video-video {
  width: 100%;
  height: 100%;
}
.video-coverview {
  width: 100%;
  height: 100%;
}
.video-cover {
  width: 100%;
  height: 100%;
  border-radius: 25rpx;

}
.player {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 120rpx;
  height: 120rpx;
  transform: translate(-50%, -50%);
}

.video-info {
  box-sizing: border-box;
  padding: 32rpx 28rpx 0 28rpx;
}
.video-title {
  color: #484558;
  font-size: 32rpx;
  line-height: 44rpx;
  font-weight: 500;
}

.video-more {
  position: relative;
  width: 100%;
  height: 184rpx;
  margin-top: 23rpx;
}
