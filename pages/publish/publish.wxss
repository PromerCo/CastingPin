.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
}

.ql-active {
  color: #22c704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ececec;
  border-left: none;
  border-right: none;
  background: white;
  z-index: 10000;
}

.sc_jiantou {
  width: 50rpx;
  height: 50rpx;
  margin-top: -60rpx;
  float: right;
}

.wrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.name {
  height: 85rpx;
  line-height: 85rpx;
  margin: 0rpx auto;
  display: flex;
  font-size: 24rpx;
  padding-left: 45rpx;
}

.name p {
  height: 85rpx;
  font-size: 26rpx;
  float: left;
}

.platform span {
  font-size: 24rpx;
  float: right;
  padding-right: 45rpx;
}

.platform_input {
  margin-top: 26rpx;
  width: 50%;
}

.title_x {
  font-size: 24rpx !important;
  margin-left: 20rpx;
  color: rgb(151, 151, 151);
}

.field span {
  margin-left: 10rpx;
}

.city span {
  font-size: 24rpx;
  margin-left: 20rpx;
}

.input_common {
  float: right;
  height: 85rpx;
  line-height: 85rpx;
  font-size: 24rpx;
  text-align: left;
  margin-left: 50rpx;
}

.follow_picker {
  float: right;
  margin-right: 45rpx;
}

.picker_num {
  float: right;
  width: 15%;
  text-align: center;
}

.introduction {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  margin: 0rpx auto;
  padding-left: 45rpx;
}

.in_intro {
  width: 90%;
  margin: 0rpx auto;
  border: 1px solid rgb(247, 247, 247);
  min-height: 100rpx;
  max-height: 150rpx;
  outline: 0;
  font-size: 24rpx;
  overflow-x: hidden;
  overflow-y: auto;
  -webkit-user-modify: read-write-plaintext-only;
}

.wux-accordion__hd {
  padding: 30rpx 45rpx !important;
}

.ux-accordion__arrow {
  padding-right: 45rpx;
}

.tag {
  font-size: 26rpx;
  margin-left: 45rpx;
}

.check {
  border: 1rpx solid gray !important;
}

.name button::after {
  border: none;
}

/* 实现textarea高度自适应 */

