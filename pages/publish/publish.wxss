@import "../../components/editor/iconfont.wxss";
@import "../../components/lib/weui.wxss";

.container_s {
  top: 0;
  left: 0;
  padding: 20px;
}

.container_s p {
  font-size: 28rpx;
  margin-left: 16rpx;
}
.fe{
  margin-top: 120rpx !important;
  border-bottom: 0.5px solid rgb(247, 247, 247);
}
.jianjie {
  font-size: 24rpx;
  margin-top: 30rpx;
  border-bottom: 1rpx solid lightgray;
  padding-left: 45rpx;
  height: 60rpx;
}

.container_s p {
  font-size: 28rpx;
