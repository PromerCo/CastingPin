.wrap {
  width: 100%;
  height: 100%;
}
/* 首页 */
.whole {
  height: 346rpx;
  margin:6rpx 20rpx 12rpx 20rpx;
  border-bottom: 1rpx solid rgb(245, 245, 245);
  position: relative;
}

.all {
  width: 100%;
  line-height: 68rpx;
  font-size: 28rpx;
}
.type {
  display: flex;
  justify-content: space-between;
}
.all p:nth-of-type(1) {
  margin-left: 30rpx;
}
.type view {
  margin-right: 30rpx;
  font-size: 20rpx;
}
.hole {
  margin-left: 20rpx;
}
.field {
  display: flex;
  justify-content: space-between;
}
.icon {
  width: 50rpx;
  height: 50rpx;
  margin-left: 28rpx;
  margin-top: 10rpx;
  border-radius: 25rpx;
}
.nickname {
display: flex;
justify-content: space-between;
}
.nick{
display: flex;
justify-content: flex-start; 
}
.nickname p{
  font-size:24rpx;
}
.end{
  font-size:20rpx;
  color:gray;
}
/* 角色简介 */
.role{
  width: 100%;
  height: 300rpx;
}
.role_top{
  width: 95%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
  font-size: 28rpx;
  margin:6rpx 20rpx 12rpx 20rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid rgb(235, 235, 235);
}
.textarea{
width:95%;
height: 200rpx !important;
border-bottom: 1rpx solid rgb(235, 235, 235);
margin: 6rpx 20rpx 12rpx 20rpx;
overflow: hidden;
}
.textarea_pro{
width:95%;
height: 200rpx !important;
border-bottom: 1rpx solid rgb(235, 235, 235);
margin: 6rpx 20rpx 12rpx 20rpx;
overflow: hidden;
}
.area{
display: flex;
justify-content: flex-start; 
}
.project{
display: flex;
justify-content: flex-start; 
}
.add{
width: 200rpx;
height: 200rpx;
}
.wux-upload--picture-card .wux-upload__select{
width: 222rpx !important;
height:210rpx  !important;
}
/* 底部 */
.footer {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  font-size:28rpx;
  background: rgb(241, 241, 243);
  position: fixed;
  display: flex;
  justify-content: space-between;
  left: 0rpx;
  bottom: 0rpx;
}
.footer view {
  display: flex;
  justify-content: space-between;
}
.footer span{
  margin-left:10rpx;
}
.footer view:nth-of-type(1){
  margin-left:60rpx;
}
.footer view:nth-of-type(3){
  margin-right:60rpx;
}
.footer image {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  margin-top: 32rpx;
}
