@import "../../components/editor/iconfont.wxss";
@import "../../components/lib/weui.wxss";

.container_s {
  top: 0;
  left: 0;
  width: 100%;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
}

.ql-active {
  color: #22c704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ececec;
  border-left: none;
  border-right: none;
}

.wrap {
  width: 100%;
  height: 100%;
}

/* 首页 */

.whole {
  height: 412rpx;
  margin: 6rpx 20rpx 12rpx 20rpx;
  border-bottom: 1rpx solid rgb(245, 245, 245);
  position: relative;
}

.all {
  width: 100%;
  line-height: 68rpx;
  font-size: 28rpx;
}

.type {
  display: flex;
  justify-content: space-between;
}

.all p:nth-of-type(1) {
  margin-left: 30rpx;
}

.type view {
  margin-right: 0rpx;
  font-size: 20rpx;
}

.all p {
  font-size: 24rpx;
}

.hole {
  margin-left: 20rpx;
}

.field {
  display: flex;
  justify-content: space-between;
}

.icon {
  width: 50rpx;
  height: 50rpx;
  margin-left: 28rpx;
  margin-top: 10rpx;
  border-radius: 25rpx;
}

.nickname {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  height: 80rpx;
}

.nick {
  display: flex;
  justify-content: flex-start;
}

.nickname p {
  font-size: 24rpx;
}

.end {
  font-size: 20rpx;
  color: gray;
}

/* 角色简介 */

.role {
  width: 100%;
  height: 300rpx;
}

.role_top {
  width: 95%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
  font-size: 28rpx;
  margin: 6rpx 20rpx 12rpx 20rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid rgb(235, 235, 235);
}

.role_top p {
  margin-left: 20rpx;
  font-size: 24rpx;
}

.textarea {
  width: 95%;
  height: 200rpx !important;
  border-bottom: 1rpx solid rgb(235, 235, 235);
  margin: 6rpx 20rpx 12rpx 20rpx;
  overflow: hidden;
}

.textarea_pro {
  width: 95%;
  height: 200rpx !important;
  border-bottom: 1rpx solid rgb(235, 235, 235);
  margin: 6rpx 20rpx 12rpx 20rpx;
  overflow: hidden;
}

.area {
  display: flex;
  justify-content: flex-start;
}

.project {
  display: flex;
  justify-content: flex-start;
}

.add {
  width: 200rpx;
  height: 200rpx;
}

.wux-upload--picture-card .wux-upload__select {
  width: 222rpx !important;
  height: 210rpx !important;
}

/* 底部 */

.footer {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 28rpx;
  background: rgb(241, 241, 243);
  position: fixed;
  display: flex;
  justify-content: space-between;
  left: 0rpx;
  bottom: 0rpx;
}

.footer view {
  display: flex;
  justify-content: space-between;
}

.footer span {
  margin-left: 10rpx;
}

.footer view:nth-of-type(1) {
  margin-left: 60rpx;
}

.footer view:nth-of-type(3) {
  margin-right: 60rpx;
}

.footer image {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  margin-top: 32rpx;
}

.opera {
  margin-left: 20rpx;
}

.detail {
  margin-left: 30rpx;
  font-size: 24rpx;
}

.apply_kol_header {
  margin-top: 20rpx;
}

.apply_kol_header p {
  color: block;
  font-size: 24rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.apply_kol_header p:last-child {
  float: right;
  margin-right: 20rpx;
  color: gray;
}

.icon_wrap {
  width: 95%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx auto;
  padding-top: 20rpx;
  min-height: 150px;
  border-top: 1rpx solid rgb(243, 239, 239);
}

.icon {
  width: 50rpx;
  height: 50rpx;
  padding-left: 5rpx;
}

.image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.footer button{
  height: 120rpx !important;
  margin-left: 0rpx !important;
  background: rgb(241, 241, 243) !important;
  color: black !important;
   display: flex;
  justify-content: space-between;
}
.footer button span{
  font-size: 28rpx;
  margin-top: 25rpx;
}
.footer button::after{
   border: none
}

.footer view:nth-of-type(2){
  margin-left:-60rpx;
}